<h1 class="heading">REPORTED POSTS</h1>
 <div class="filter-block">
 </div>
 <div class="box box-blue">
  <div class="box-body">
    <div class="custom-table table-responsive">
      <table class="table table-striped table-border">
        <thead>
          <tr>
            <th>Reported_by</th>                            
            <th>Post's User </th>
            <th>Reason</th>
            <th>Action</th>
          </tr>
        </thead>
        <%= "No Reports found." unless @reports.present?%>
        <% @reports.each do |report| %>
        <% unless report.eql?(nil) %>
        <tbody>
          <tr>
            <td><%= User.find_by(id: report.user_id).name %></td>
            <td><%= Post.find_by(id: report.reportable_id).user.name%></td>
            <td><%= report.try(:reason) %></td>        
            <td>
              <div class="action-btn">
                
                <a><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i> View'.html_safe, admin_report_path(id: report.id), :class=>"btn btn-sm btn-success"%></a>
                
                <a><%= link_to '<i class="fa fa-trash" aria-hidden="true"></i> Delete'.html_safe,  admin_report_path(report.id), method: :delete,:class=>"btn btn-sm btn-danger", data: {confirm: 'Are you sure to delete this report?' }%></a>
              </div>  
            </td>
          </tr>                                
        </tbody>
        <%end%>
        <%end%>
      </table>
    </div>                     
  </div>
</div>
<div class="custom-pagination">
  <%= will_paginate @reports %>
</div>