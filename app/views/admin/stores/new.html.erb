
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC-lQ-u7das4d7DuTcjLii2G89FB2FqO-I&sensor=false&libraries=places"></script>
<div class="content-wrapper">
  <section class="main-block">
    <div class="container">Add Provider
      <div class="row">
        <div class="tab-content">
  				<div class="tab-pane fade active in" id="default-tab-1">
  					<div class="tab-pane">
  							<%= form_for [:admin, @store],html: {id: "new_store"} do |f|%>
  								<div class="detail-form m-t-40 m-b-40">

                    <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">Name</label>
                        <div class="col-sm-8 col-md-7">
                          <%= f.text_field :name, class: "form-control", placeholder: ""%>
                        </div>
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">Email</label>
                        <div class="col-sm-8 col-md-7">
                          <%= f.text_field :email, class: "form-control", placeholder: ""%>
                        </div>
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">Mobile</label>
                        <div class="col-sm-8 col-md-7">
                          <%= f.text_field :mobile, class: "form-control", placeholder: ""%>
                        </div>
                      </div>
                    </div>



                     <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">Store Type</label>
                        <div class="col-sm-8 col-md-7">
                          <%#= f.text_field :store_type, class: "form-control", placeholder: ""%>
                          <%= f.select :store_type, options_for_select({ "apparels"=>"0" , "food" => "1" ,  "electronics"=>"2" , "events"=>"3"})%>
                        </div>
                      </div>
                    </div>

                     <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">Website</label>
                        <div class="col-sm-8 col-md-7">
                          <%= f.text_field :website, class: "form-control", placeholder: ""%>
                        </div>
                      </div>
                    </div>

                     <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">Location</label>
                        <div class="col-sm-8 col-md-7">
                          <%= f.text_field :location, class: "form-control", placeholder: ""%>
                        </div>
                      </div>
                    </div>

                     <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">Description</label>
                        <div class="col-sm-8 col-md-7">
                          <%= f.text_area :description, class: "form-control", placeholder: ""%>
                        </div>
                      </div>
                    </div>



                    <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">Address</label>
                        <div class="col-sm-8 col-md-7">
                          <%= f.text_area :address, class: "form-control", placeholder: ""%>
                        </div>
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">Country</label>
                        <div class="col-sm-8 col-md-7">
                          <%= f.text_field :country, class: "form-control", placeholder: ""%>
                        </div>
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">City</label>
                        <div class="col-sm-8 col-md-7">
                          <%= f.text_field :city, class: "form-control", placeholder: ""%>
                        </div>
                      </div>
                    </div>
                 
                    

  									<div class="form-group">
  										<div class="text-center attendee-cent-s">
  											<button class="btn btn-default btn-green" type="submit">Submit</button>
  										</div>
									</div>
								</div>
							<%end%>
						</div>
  				</div>
        </div>
      </div>
    </div>
  </section>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('#userdatetimepicker1').datetimepicker({
      format: 'DD/MM/YYYY',
      useCurrent: false,
      maxDate: new Date()
    });
    window.onload = function() {
      var myInput = document.getElementById('userdatetimepicker1');
      myInput.onpaste = function(e) {
        e.preventDefault();
      }
    }
  });
</script>
