 <h1 class="heading">STORE MANAGEMENT</h1>
 <div class="filter-block">
 <fieldset class="global-fieldset">
    <legend>Filter By</legend>
    <div class="filter-content user-filter">
    <%= form_tag admin_stores_path, method: :get do  %>
      <div class="row">
      <div class="col-sm-3">
          <div class="user-label">                              
           <div class="">
            <%=  text_field_tag :search, "", class:"form-control custom-control1", placeholder: "Search by Email/Name" %>
           </div>                            
         </div>
       </div> 
         <div class="col-sm-3">
          <div class="user-label">
            <div class="">
              <%=  select_tag :status,options_for_select([["All",""],["Active",1],["Blocked",2]]), class:"form-control custom-control1" %>
          </div>
          </div>
        </div> 
        <div class="col-sm-3">
          <div class="text-left">
            <button class="btn btn-red">Search</button>
          </div>
       </div>
    </div>
    <%end%>
  </div>
</fieldset>
  </div>
<div class="box box-blue">
  <div class="box-body">
    <div class="custom-table table-responsive">
      <table class="table table-striped table-border">
        <thead>
          <tr>
            <th>Store Image</th>
            <th>Store Name</th>                            
            <th>Email </th>
            <th>Phone </th>
            <th>Store Type </th>
            <th>Address</th>
            <th>Status</th>                                                        
            <th>Action</th>
          </tr>
        </thead>
        <%= "No store found." unless @stores.present?%>
        <% @stores.each do |store| %>
        <% unless store.eql?(nil) %>
        <tbody>
          <tr>
            <td><%= store.images.present? ? image_tag(store.images.first.try(:file_url),:width => 50, :height => 50, :class => 'news-content') : image_tag("/store.png",:width => 50, :height => 50, :class => 'news-content') %></td>
            <td><%= truncate(store.try(:name), omision: "...", length: 30) %></td>
            <td><%= truncate(store.try(:email), omision: "...", length: 30) %></td>
            <td><%= truncate(store.try(:mobile), omision: "...", length: 30) %></td> 
            <td><%= (store.try(:store_type)).try(:titleize) %></td> 
            <td><%= truncate(store.try(:address), omision: "...", length: 50) %></td>                   
            <td><%if store.status.eql?(0) %>
                    <%='<i class = "btn-sm btn-danger"> Unverified</i>'.html_safe %>                                   
                  <%elsif store.status.eql?(1) %>
                      <%= '<i class = "btn-sm btn-success"> Active </i>'.html_safe %>
                  <%else%>
                       <%='<i class = "btn-sm btn-danger"> Blocked</i>'.html_safe %>             
                  <%end%>
            </td>                               
            <td>
              <div class="action-btn">
                <%if store.status.eql?(1) %>
                <%= link_to '<i class="fa fa-ban" aria-hidden="true"></i> Block'.html_safe,store_status_admin_stores_path(:id => store.id), method: :post,:class=>"btn btn-sm btn-danger",:data => { :confirm => "Are you sure to block this store?" }%>
                <%elsif store.status.eql?(2) %>
                <%= link_to '<i class="fa fa-check" aria-hidden="true"></i> Unblock'.html_safe,store_status_admin_stores_path(:id => store.id), method: :post,:class=>"btn btn-sm btn-primary",:data => { :confirm => "Are you sure to activate this store?" }%>
                <%end%>    
                <a><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i> View'.html_safe, admin_store_path(id: store.id), :class=>"btn btn-sm btn-success"%></a>
                <!-- <a><%#= link_to '<i class="fa fa-trash" aria-hidden="true"></i> Delete'.html_safe,  admin_store_path(store.id), method: :delete,:class=>"btn btn-sm btn-danger", data: {confirm: 'Are you sure to delete this store?' }%></a> -->
              </div>  
            </td>
          </tr>                                
        </tbody>
        <%end%>
        <%end%>
      </table>
    </div>                     
  </div>
</div>

<div class="custom-pagination">
  <%= will_paginate @stores %>
</div>

</div>
</div>
</div>
