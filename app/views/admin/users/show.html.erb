<div class="right-inner">

<h1 class="heading"> USER DETAILS</h1>
  <div class="form-show-body">
      <form>
        <div class="form-group">
          <div class="row">
            <label class="col-sm-2"> Name </label>
            <div class="col-sm-8">
               <%= @user.try(:name) %>
            </div>
          </div>
        </div>
       
        <div class="form-group">
          <div class="row">
            <label class="col-sm-2"> Email  </label>
            <div class="col-sm-8">
              <%= @user.try(:email) %>
            </div>
          </div>
        </div>
       
        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">Mobile Number  </label>
            <div class="col-sm-8">
              <%= @user.try(:mobile) %>
          </div>
        </div>
        </div>
        
        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">Date of Birth </label>
            <div class="col-sm-8">
                <%= @user.try(:dob) %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">Gender </label>
            <div class="col-sm-8">
                <%= @user.try(:gender).eql?("0") ? "Male" : "Female" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">Available CTD </label>
            <div class="col-sm-8">
                <%= "Not available" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">Available CTM </label>
            <div class="col-sm-8">
                <%= "Not available" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">Buyer's Behaviour </label>
            <div class="col-sm-8">
                <%= @user&.min_behaviour %>
                <%= @user&.max_behaviour %>
            </div>
          </div>
        </div>

        <%if @user.user_docs%>
        <% @user.user_docs.each do |doc|%>
        <div class="form-group">
          <div class="row">
            <label class="col-sm-2" ><%=doc&.module_type&.capitalize %> </label>
            <div class="col-sm-8">
              <dl>
              <dt><%=doc&.doc_type %></dt>
              </dl>
              <br>
              <%#= doc.front_img.present? ? "Front Image" : "" %>
              <%= doc.front_img.present? ? image_tag(doc.front_img.try(:url),:width => 200, :height => 100, :class => 'news-content') : image_tag("/1.png",:width => 200, :height => 100, :class => 'news-content') %>
              <%#= doc.back_img.present? ? "Back Image" : "" %>
              <%= doc.back_img.present? ? image_tag(doc.back_img.try(:url),:width => 200, :height => 100, :class => 'news-content') : image_tag("/1.png",:width => 200, :height => 100, :class => 'news-content') %>
            </div>
          </div>
        </div>
        <%end%>
        <%end%>
