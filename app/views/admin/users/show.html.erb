          <div class="row">
            <label class="col-sm-2">Address </label>
            <div class="col-sm-8">
                <%#= @user.try(:address) %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">City</label>
