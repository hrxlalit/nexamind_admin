        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">Country</label>
            <div class="col-sm-8">
              <%#= @user.try(:country) %>
            </div>
          </div>
        </div> -->
        
        <div class="update-btn text-center">
          <%= link_to 'BACK', admin_users_path, class: "btn btn-red btn-common" %>
          
          <%= link_to 'APPROVE', user_approve_admin_users_path(id: @user.id, admin_approved: 1), class: "btn btn-red btn-success" %>
          <%= link_to 'REJECT', user_approve_admin_users_path(id: @user.id, admin_approved: 0), class: "btn btn-red btn-danger" %>
          
        </div>
      </form>
    </div>
</div>  