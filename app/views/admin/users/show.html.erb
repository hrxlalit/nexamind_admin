<div class="right-inner">

<h1 class="heading"> USER DETAILS</h1>
  <div class="form-show-body">
      <form>
        <div class="form-group">
          <div class="row">
            <label class="col-sm-2"> Name </label>
            <div class="col-sm-8">
               <%= @user.try(:name) %>
            </div>
          </div>
        </div>
       
        <div class="form-group">
          <div class="row">
            <label class="col-sm-2"> Email  </label>
            <div class="col-sm-8">
              <%= @user.try(:email) %>
            </div>
          </div>
        </div>
       
        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">Mobile Number  </label>
            <div class="col-sm-8">
              <%= @user.try(:mobile) %>
          </div>
        </div>
        </div>
        
        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">Gender </label>
            <div class="col-sm-8">
                <%= @user.try(:gender)%>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">Address </label>
            <div class="col-sm-8">
                <%= @user.try(:address) %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">City</label>
            <div class="col-sm-8">
              <%= @user.try(:city) %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-sm-2">Country</label>
            <div class="col-sm-8">
              <%= @user.try(:country) %>
            </div>
          </div>
        </div>
        
        <div class="update-btn text-center">
          <%= link_to 'BACK', admin_users_path, class: "btn btn-red btn-common" %>
          <%if @user.status != 1%>
          <%= link_to 'APPROVE', user_status_admin_users_path(id: @user.id, status: 1), class: "btn btn-red btn-common" %>
          <%end%>
        </div>
      </form>
    </div>
</div>  