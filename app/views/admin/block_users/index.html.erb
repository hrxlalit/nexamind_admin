<h1 class="heading">REPORTED USERS</h1>
 <div class="filter-block">
 </div>
 <div class="box box-blue">
  <div class="box-body">
    <div class="custom-table table-responsive">
      <table class="table table-striped table-border">
        <thead>
          <tr>
            <th>Username</th>                            
            <th>Reported by</th>
            <th>Status </th>
            <th>Action</th>
          </tr>
        </thead>
        <%= "No Reports found." unless @block_users.present?%>
        <% @block_users.each do |report| %>
        <% unless report.eql?(nil) %>
        <tbody>
          <tr>
            <td><%= truncate(report.block.name, omision: "...", length: 30) %></td>
            <td><%= truncate(report.user.name, omision: "...", length: 30) %></td> 
           <td>                                
                <%if report.block.status.eql?(1) || report.block.verified? %>
                      <%= '<i class = "btn-sm btn-success"> Active </i>'.html_safe %>
                  <%else%>
                       <%='<i class = "btn-sm btn-danger"> Blocked</i>'.html_safe %>             
                  <%end%>
            </td>                 
            <td>
              <div class="action-btn">
                
                <%if report.block.status.eql?(1) || report.block.verified? %>
                  <%= link_to '<i class="fa fa-ban" aria-hidden="true"></i> Block'.html_safe,user_status_admin_users_path(:id => report.block.id), method: :post,:class=>"btn btn-sm btn-danger",:data => { :confirm => "Are you sure to block this user?" }%>
                <%else report.block.status.eql?(2) || report.block.blocked? %>
                  <%= link_to '<i class="fa fa-check" aria-hidden="true"></i> Unblock'.html_safe,user_status_admin_users_path(:id => report.block.id), method: :post,:class=>"btn btn-sm btn-primary",:data => { :confirm => "Are you sure to activate this user?" }%>
                <%end%>
                
                <a><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i> View'.html_safe, admin_block_user_path(id: report.id), :class=>"btn btn-sm btn-success"%></a>
                
                <a><%= link_to '<i class="fa fa-trash" aria-hidden="true"></i> Delete'.html_safe,  admin_block_user_path(report.id), method: :delete,:class=>"btn btn-sm btn-danger", data: {confirm: 'Are you sure to delete this Report?' }%></a>
              </div>  
            </td>
          </tr>                                
        </tbody>
        <%end%>
        <%end%>
      </table>
    </div>                     
  </div>
</div>
<div class="custom-pagination">
  <%= will_paginate @reports %>
</div>