  <div class="right-inner">
          <h1 class="heading">AVATAR MANAGEMENT</h1>
          <div class="box box-blue">
            <div class="box-body">
                <div class="custom-table table-responsive">
              <table class="table table-striped table-border">
                  <thead>
                      <tr>
                        <th>Image</th>
                        <th>Gender</th>
                        
                        <th>Action</th>
                      </tr>
                  </thead>
                  <% @avatars.each do |avatar| %>
                      <tbody>
                        <tr>
                          <td><%= image_tag(avatar.try(:image).try(:file).try(:url), width: "200px", height: "200px")%></td>
                          <td><%= sanitize avatar.gender %></td>
                          <td>
                            <div class="action-btn">
                            <a href="/admin/avatars/<%= avatar.id%>" class="btn btn-sm btn-success"><i class="fa fa-eye" aria-hidden="true"></i>View</a>
                            <a href="/admin/avatars/<%= avatar.id%>/edit" class="btn btn-sm btn-primary"><i class="fa fa-edit" aria-hidden="true"></i>Edit</a>
                            </div>                             
                          </td>
                        </tr>                              
                      </tbody>
                  <%end%>
              </table>
          </div>	
                
            </div>
         </div>
      </div>
</div>
