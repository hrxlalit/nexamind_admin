<div class="content-wrapper">
  <section class="main-block">
    <div class="container">
      <div class="row">
        <div class="tab-content">
  				<div class="tab-pane fade active in" id="default-tab-1">
  					<div class="tab-pane">
  							<%= form_for @admin_user,url: admin_home_path,method: :patch,html: {id: "new_admin_user"} do |f|%>
  								<div class="detail-form m-t-40 m-b-40">

  									<div class="form-group">
  										<div class="row">
  											<label class="col-sm-4 col-md-3 control-label">User Name</label>
  											<div class="col-sm-8 col-md-7">
  											  <%= f.text_field :name, class: "form-control", required: true, placeholder: ""%>
  											</div>
  										</div>
  									</div>
                    
                    <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">Email</label>
                        <div class="col-sm-8 col-md-7">
                          <%= f.email_field :email, class: "form-control", required: true, placeholder: ""%>
                        </div>
                      </div>
                    </div>
                    
                    <div class="form-group">
                      <div class="row">
                        <label class="col-sm-4 col-md-3 control-label">Password</label>
                        <div class="col-sm-8 col-md-7">
                          <%= f.password_field :password, class: "form-control", required: true, placeholder: ""%>
                          <h12>Change your password with updating your profile.</h12>
                        </div>
                      </div>
                    </div>  

                    <div class="form-group">
                        <div class="row">
                          <label class="col-sm-4 col-md-3 control-label">Confirm Password</label>
                          <div class="col-sm-8 col-md-7">
                            <%= f.password_field :confirm_password, class: "form-control", required: true, placeholder: ""%>
                          </div>
                        </div>
                      </div>
                    
                    <div class="form-group">
  										<div class="row">
  											<label class="col-sm-4 col-md-3 control-label">Image</label>
  											<div class="col-sm-8 col-md-7">
                          <% if @admin_user.try(:image).present? %>
                            <div class="uploadimg">
                              <%= image_tag @admin_user.image.try(:url),:class=>"fileinput-preview thumbnail", :id=> "black_cat_img", :alt=>"", :width=>"200px", :height=>"150px" %>
                            </div>
                            <div class="addupload addupload1">
                              <div class="fileUpload btn btn-pri choose-file">
                                <%= f.file_field :image,:class=>"btn btn-pri btn-blue btn-file upload",data: { preview_element_id: 'black_cat_img', preview_element_type: 'id'}, :accept=>"Image/*" %>
                              </div>
                            </div>
                          <%else%>
                            <div class="uploadimg">
                              <img src="/1.png" class="fileinput-preview thumbnail" id= "black_cat_img" alt="" width="200px" height="150px">
                            </div>
                            <div class="addupload addupload1">
                              <div class="fileUpload btn btn-pri choose-file">
                                <%= f.file_field :image,:class=>"btn btn-pri btn-blue btn-file upload",data: { preview_element_id: 'black_cat_img', preview_element_type: 'id'}, required: true, :accept=>"Image/*" %>
                              </div>
                            </div>
                          <%end%>
  											</div>
  										</div>
  									</div>

  									<div class="form-group">
  										<div class="text-center attendee-cent-s">
  											<button class="btn btn-default btn-green" type="submit">Submit</button>

  										</div>
									</div>
								</div>
							<%end%>
						</div>
  				</div>
        </div>
      </div>
    </div>
  </section>
</div>