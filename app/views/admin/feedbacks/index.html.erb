<h1 class="heading">FEEDBACKS</h1>
<div class="filter-block">
</div>
<div class="box box-blue">
  <div class="box-body">
    <div class="custom-table table-responsive">
      <table class="table table-striped table-border">
        <thead>
          <tr>
            <th>Feedback</th>
            <th>User</th>
            <th>Action</th>
          </tr>
        </thead>
        <%= "No Feedback found." unless @feedbacks.present?%>
        <% @feedbacks.each do |feedback| %>
        <% unless feedback.eql?(nil) %>
        <tbody>
          <tr>
            <td><%= truncate(feedback.description, omision: "...", length: 50) %></td>
            <td><%= truncate(feedback.user.name, omision: "...", length: 30) %></td>
            <td>
              <div class="action-btn">
                <a><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i> View'.html_safe, admin_feedback_path(id: feedback.id), :class=>"btn btn-sm btn-success"%>
                </a>
                <a><%= link_to '<i class="fa fa-trash" aria-hidden="true"></i> Delete'.html_safe,  admin_feedback_path(feedback.id), method: :delete,:class=>"btn btn-sm btn-danger", data: {confirm: 'Are you sure to delete this Feedback?' }%>
                </a>
              </div>  
            </td>
          </tr>                                
        </tbody>
        <%end%>
        <%end%>
      </table>
    </div>                     
  </div>
</div>
<div class="custom-pagination">
  <%= will_paginate @feedbacks %>
</div>