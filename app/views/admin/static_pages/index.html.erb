                          <%= link_to "Add Content", new_admin_static_page_path, :class => "btn btn-red" %>
                        </div>
                   </div>
               </div>
           </div>
          <div class="box box-blue">
            <div class="box-body">
                <div class="custom-table table-responsive">
              <table class="table table-striped table-border">
                  <thead>
                      <tr>
                        <!-- <th>Id</th> -->
                        <th>Subject Name</th>
                        <th>Type</th>
                        <th>Posted on </th>
                        
                        <th>Action</th>
                      </tr>
                  </thead>
                  <% @static_pages.each do |static_page| %>
                    <% unless static_page.eql?(nil) %>
                      <tbody>
                        <tr>
                          <!-- <td><%#= static_page.id%></td> -->
                          <td><%= truncate(static_page.title, omision: "...", length: 30)%></td>
                          <td><%= static_page.type%></td>
                          <td><%= static_page.created_at.localtime.strftime("%d %B, %Y %I:%M %p") %></td>
                          <% if static_page.title == "Contact Us"%>
                          <td>
                            <div class="action-btn">
                            <a href="/admin/contacts" class="btn btn-sm btn-success"><i class="fa fa-eye" aria-hidden="true"></i>View</a>
                            </div>                             
                          </td>
                          <%else%>
                          <td>
                            <div class="action-btn">
                            <a href="/admin/static_pages/<%= static_page.id%>" class="btn btn-sm btn-success"><i class="fa fa-eye" aria-hidden="true"></i>View</a>
                            <a href="/admin/static_pages/<%= static_page.id%>/edit" class="btn btn-sm btn-primary"><i class="fa fa-edit" aria-hidden="true"></i>Edit</a>
                            <%#= link_to '<i class="fa fa-trash" aria-hidden="true"></i> Delete'.html_safe,  admin_static_page_path(static_page.id), method: :delete,:class=>"btn btn-sm btn-danger", data: {confirm: 'Are you sure to delete this article?' }%></a>
                            </div>                             
                          </td>
                          <%end%>
                        </tr>                              
                      </tbody>
                    <%end%>
                  <%end%>
              </table>
          </div>	
                
            </div>
         </div>
          
          <div class="custom-pagination">
          <%#= will_paginate @static_pages %>
            
        </div>
          
      </div>
</div>
