<div class="box box-blue">
  <div class="box-body">
    <div class="custom-table table-responsive">
      <table class="table table-striped table-border">
        <thead>
          <tr>
            <th>User Name</th>                            
            <th>Email </th>
            <th>User Role</th>
            <th>Title </th>
            <th>Description </th>
            <th>Action</th>
          </tr>
        </thead>
        <%= "No Contact details found." unless @contacts.present?%>
        <% @contacts.each do |contact| %>
        <% unless contact.eql?(nil) %>
        <tbody>
          <tr>
            <td><%= truncate(contact.user.try(:name), omision: "...", length: 30) %></td>
            <td><%= truncate(contact.user.try(:email), omision: "...", length: 30) %></td>
            <td><%= truncate(contact.user.try(:role), omision: "...", length: 30) %></td>
            <td><%= truncate(contact.try(:title), omision: "...", length: 30) %></td> 
            <td><%= truncate(sanitize contact.description, omision: "...", length: 30) %></td>            
            <td>
              <div class="action-btn">                
                <a><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i> View'.html_safe, admin_contact_u_path(id: contact.id), :class=>"btn btn-sm btn-success"%></a>              
              </div>  
            </td>
          </tr>                                
        </tbody>
        <%end%>
        <%end%>
      </table>
    </div>                     
  </div>
</div>

<div class="custom-pagination">
  <%= will_paginate @contacts %>
</div>

</div>
</div>
</div>
