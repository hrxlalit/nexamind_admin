    <div class="before-login-wrapper">
       <div class="inner-content clearfix">
          <div class="login-main-content">
             <div class="before-login-logo">
                <!-- <div class=""><a href="/admin/sessions/new"><img src="/assets/logo1.png"></a></div> -->
              </div>
              <%= form_for(:session, url: admin_sessions_path, method: :post,:class=> "form-horizontal common-form",html: {id: "signin-idenity"}) do |f| %>
                <div class="login-content-box">
                    <h2 class="heading">Login</h2>
                     <div class="form-group">
                       <%= f.email_field :email, class: 'form-control', placeholder: "Email", required: true,autocomplete: "off" %>
                     </div> 
                     <div class="form-group">
                       <%= f.password_field :password, class: 'form-control', placeholder: "Password" , required: true,autocomplete: "off" %>
                     </div> 
                     <div class="remeberme-block  clearfix ">
                       <div class="pull-left">
                          <%= f.check_box :remember_me %>
                          <label for="subscribeNews">Remember me</label>
                       </div>
                       <div class="pull-right">
                         <a href="/admin/home/forget_password">Forgot password?</a>
                       </div>
                     </div>
                     <div class="button-box">
                       <button type="submit" class="btn btn-red width100">LOGIN</button>
                     </div>
                 </div>
              </div>
            <%end%>
        </div>

      </div>
  <div class="copyrights">Centareum Â© 2018 All Rights Reserved.</div>
  
</body>

